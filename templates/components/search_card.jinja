{% macro card(property)%}
            <div class="col" style="width: 100%;  margin-bottom: 20px; cursor: pointer;" onclick="window.location.href = '/property/{{property.id}}'">
                <div class="card bg-white bg-gradient"
                    style="border-width: 0.5px;border-style: none;box-shadow: 0.5px 0.5px 4px rgba(45,45,45,0.09);">
                    <div class="card-body p-4" style="border-style: none;">
                        <div class="d-flex flex-column flex-md-row">
                            <div style="width: 250px;margin-right: 25px;"><img class="rounded img-fluid"
                                    src="{{property.pictures[0]}}"
                                    style="object-fit: cover;width: 100%;height: 100%;" loading="lazy" width="198"
                                    height="198"></div>
                            <div class="d-flex flex-column justify-content-between"
                                style="width: 100%;padding-bottom: 0px;">
                                <div>
                                    <!-- Start: badges -->
                                    <div><span class="badge bg-primary">Badge</span></div><!-- End: badges -->
                                    <h4 class="fw-bold" style="margin-top: 3px;">{{property.name}}<br></h4>
                                    <p class="text-muted" style="margin-bottom: 0px;"><span
                                            style="color: rgb(45, 45, 45);">{{property.location}}</span><br></p>
                                </div>
                                <div>
                                    <div class="d-flex flex-row justify-content-between align-items-center">
